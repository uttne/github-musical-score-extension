{
    "name": "GitHub Musical Score Extension",
    "description": "GitHub で MusicXML を画像で表示する拡張機能",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting"
    ],
    "host_permissions":[
        "https://github.com/"
    ],
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "githubPage.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/*"
            ],
            "matches": [
                "https://github.com/*"
            ]
        }
    ]
}